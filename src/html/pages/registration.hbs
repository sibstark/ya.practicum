---
id: "login"
title: Login
stylesheets:
- ../assets/main.css
- login.css
scripts:
- ../../index.js
---

{{#extend "main"}}
    {{#content "content"}}
        <div class="page page_centered">
            <div class="authorization-container">
                <h4 class="authorization-container__header">Registration</h4>
                <div class="authorization-container__form">
                    <form>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">First name</label>
                            <input name="first_name" type="text" placeholder="First name" class="form-control__input" />
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Second name</label>
                            <input name="second_name" type="text" placeholder="Second name" class="form-control__input" />
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Login</label>
                            <input name="login" type="text" placeholder="Login" class="form-control__input" />
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Email</label>
                            <input name="email" type="text" placeholder="Email" class="form-control__input" />
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Phone</label>
                            <input name="phone" type="text" placeholder="Phone" class="form-control__input form-control__input_error" />
                            <label class="form-control__error-label">Required</label>
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Password</label>
                            <input name="password" type="password" placeholder="Password" class="form-control__input form-control__input_error" />
                            <label class="form-control__error-label">Don't match</label>
                        </div>
                        <div class="form-control authorization-container__form-control">
                            <label class="form-control__label">Confirm password</label>
                            <input name="confirmPassword" type="password" placeholder="Confirm password" class="form-control__input form-control__input_error" />
                            <label class="form-control__error-label">Don't match</label>
                        </div>
                        <button type="submit" class="button button__blue button_full-width authorization-container__form-control">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}